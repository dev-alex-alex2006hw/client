{
  "name": "planet-client",
  "version": "0.2.0",
  "description": "A client for Planet's imagery API",
  "repository": {
    "type": "git",
    "url": "git://github.com/planetlabs/planet-client-js.git"
  },
  "bugs": {
    "url": "https://github.com/planetlabs/planet-client-js/issues"
  },
  "license": "Apache-2.0",
  "main": "api/index.js",
  "scripts": {
    "pretest": "eslint bin examples api cli test",
    "test": "mocha --recursive test",
    "test-debug": "mocha --debug-brk --recursive test",
    "start": "watchy --watch bin,examples,api,cli,test -- npm test",
    "postpublish": "npm run publish-doc",
    "doc": "jsdoc --configure doc/config.json",
    "publish-doc": "npm run doc && gh-pages --dist build/doc"
  },
  "bin": {
    "planet": "bin/planet.js"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^0.22.1",
    "eslint-config-planet": "^2.0.0",
    "gh-pages": "^0.3.1",
    "jsdoc": "^3.3.2",
    "minami": "^1.1.0",
    "mocha": "^2.2.5",
    "sinon": "^1.15.3",
    "watchy": "^0.6.2"
  },
  "dependencies": {
    "batch": "^0.5.2",
    "bistre": "^1.0.1",
    "bole": "^2.0.0",
    "yargs": "^3.14.0"
  }
}
